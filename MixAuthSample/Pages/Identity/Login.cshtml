@page
@model MixAuthSample.Pages.LoginModel
@{
}
<h1>Login</h1>
<div class="container" style="width:400px">
    <form role="form" method="post">
        <div asp-validation-summary="All" class="field-validation-error">

        </div>
        <div class="form-group">
            <label>账号</label>
            <input type="text" placeholder="请输入账号" asp-for="UserName" class="form-control" name="UserName" />
        </div>
        <div class="form-group">
            <label>密码</label>
            <input type="password" placeholder="请输入密码" asp-for="Password" class="form-control" name="Password" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="登录" />
        </div>
    </form>
</div>